<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:backgroundTint="@color/backgroundColor"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/LOGO"
            android:layout_width="fill_parent"
            android:scaleType="fitXY"
            android:layout_height="250dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Royal Clips"
            android:textColor="@color/loginTextColor"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/tvAppVersion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/loginTextColor"
            android:text="Version: 1.0.0"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/loginTextColor"
            android:text="Designed &amp; Developed By" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/loginTextColor"
            android:text="Hongjia Che" />


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/lambo_aven" />



        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/loginTextColor"
            android:text="Website" />

        <TextView
            android:id="@+id/tvWebSite"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:gravity="center_horizontal"
            android:text="https://github.com/JasonChe777/RoyalClips" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="@color/loginTextColor"
            android:text="Contact Number" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:gravity="center_horizontal"
            android:text="+12489313541" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:textColor="@color/loginTextColor"
            android:text="Contact Email" />

        <TextView
            android:id="@+id/tvEmail1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="email"
            android:gravity="center_horizontal"
            android:text="jasonche1217@gmail.com" />


    </LinearLayout>
</ScrollView>